{
    "name": "Excerice 5",
    "version": "0.1",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "background": {        
        "scripts": ["hot-reload.js"],
        "persistent": false        
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":      ["content-script.js"]
    }],
    "browser_action": {
        "default_popup": "popup.html"
    }

  }